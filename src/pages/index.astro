---
import Layout from '../layouts/Layout.astro';
---

<Layout title="BIG CORNER - Hamburguesas">
  <section class="hero">
    <div class="hero-content">
      <h1>🍔 BIG CORNER</h1>
      <p class="subtext">Hamburguesas caseras, contundentes y al mejor precio</p>

      <img src="/images/logo.png" alt="Logo de BIG CORNER" class="hero-logo" />

      <div class="cta-banner">
        <p>📍 Retiro en local o delivery en zona sur</p>
        <p>🔥 Combos desde $3500</p>
        <p>🕐 Jueves a domingo de 20:00 a 00:30</p>
      </div>

      <img src="/images/hero-burger.jpg" alt="Hamburguesa principal" class="hero-image" />

      <a class="btn" href="https://wa.me/5491132776974?text=Hola!%20Quiero%20hacer%20un%20pedido%20en%20BIG%20CORNER" target="_blank">
        Hacé tu pedido por WhatsApp
      </a>
    </div>
  </section>

  <!-- Las demás secciones siguen igual: about, menu, reviews, hours, contact, cta-final -->
</Layout>
